# Server Configuration
PORT=5000
HOST=localhost
NODE_ENV=production

# Database Configuration
DB_PATH=./data/api_gateway.db

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# API Configuration
API_VERSION=1.0.0
API_TIMEOUT=30000

# Performance Configuration
COMPRESSION_LEVEL=6
BODY_PARSER_LIMIT=10mb

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_PATH=./backups

# SSL Configuration (for production)
SSL_ENABLED=false
SSL_KEY_PATH=./ssl/private.key
SSL_CERT_PATH=./ssl/certificate.crt

# Redis Configuration (for session storage)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (for notifications)
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# JWT Configuration (for authentication)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Google Sheets API (if using)
GOOGLE_SHEETS_CLIENT_ID=your-google-client-id
GOOGLE_SHEETS_CLIENT_SECRET=your-google-client-secret
GOOGLE_SHEETS_REDIRECT_URI=http://localhost:5000/auth/google/callback

# AI Configuration (for AI features)
AI_API_KEY=your-ai-api-key
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# Development Overrides
# Uncomment these for development
# NODE_ENV=development
# LOG_LEVEL=debug
# ENABLE_METRICS=false
# SSL_ENABLED=false
